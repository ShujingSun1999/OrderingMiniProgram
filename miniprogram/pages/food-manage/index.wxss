/* pages/food-manage/index.wxss */
/* 添加可爱字体样式 */
.container {
  padding: 16rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.add-form {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  /* 视口贴边：左右各 22rpx 安全间距 */
  width: calc(100vw - 44rpx);
  margin-left: calc((100vw - 100%) / -2 + 22rpx);
  margin-right: calc((100vw - 100%) / -2 + 22rpx);
  box-sizing: border-box;
}

.form-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.form-group {
  margin-bottom: 20rpx;
}

.form-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 26rpx;
  background-color: #f7f7f7;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.form-picker {
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 16rpx;
  background-color: #f7f7f7;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.picker-value {
  font-size: 28rpx;
  color: #333;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.image-upload {
  border: 2rpx dashed #ddd;
  border-radius: 12rpx;
  height: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f7f7f7;
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
  opacity: 0.5;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.submit-btn {
  background-color: #ff6b6b;
  color: #fff;
  border-radius: 50rpx;
  padding: 18rpx 28rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
  margin-top: 16rpx;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.food-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  /* 与添加卡片同宽：左右各 22rpx 安全间距 */
  width: calc(100vw - 44rpx);
  margin-left: calc((100vw - 100%) / -2 + 22rpx);
  margin-right: calc((100vw - 100%) / -2 + 22rpx);
  box-sizing: border-box;
}

.list-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.food-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 2rpx solid #eee;
}

.food-item:last-child {
  border-bottom: none;
}

.food-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 25rpx;
  border: 2rpx solid #ffe6eb;
}

.food-info {
  flex: 1;
}

.food-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.food-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.food-category {
  font-size: 22rpx;
  color: #ff6b6b;
  background-color: #fff0f0;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.delete-btn {
  background-color: #ff6b6b;
  color: white;
  border-radius: 20rpx;
  padding: 12rpx 20rpx;
  font-size: 24rpx;
  border: none;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.08);
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.empty-list {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 40rpx 24rpx;
  text-align: center;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.empty-icon {
  width: 150rpx;
  height: 150rpx;
  margin-bottom: 25rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}
