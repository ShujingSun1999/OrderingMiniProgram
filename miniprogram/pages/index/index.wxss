/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 16r极速赛车开奖结果历史记录px;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.menu-card {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}