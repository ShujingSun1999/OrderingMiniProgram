/* pages/index/index.wxss */
.container {
  padding: 32rpx;
  background-color: #f7f8fa;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 32rpx;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff6b6b;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #999;
}

.menu-card {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}

.menu-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #8a8f98;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 顶部横幅图片样式 */
.top-banner {
  width: 100%;
  display: block;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
}