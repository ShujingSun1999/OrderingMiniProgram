/* pages/index/index.wxss */
.container {
  padding: 40rpx;
  background: linear-gradient(135deg, #fff5f5, #ffe6eb);
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 60rpx;
  padding: 40rpx 0;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: #ff6b8b;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #ff8fa3;
}

.menu-card {
  display: flex;
  align-items: center;
  background: linear-gradient(135deg, #fff, #fffafb);
  border-radius: 28rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 139, 0.15);
  transition: all 0.2s ease;
  border: 2rpx solid #ffe6eb;
}

.menu-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 139, 0.2);
}

.menu-icon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 30rpx;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #ff6b8b;
  margin-bottom: 8rpx;
}

.menu-desc {
  font-size: 26rpx;
  color: #ff8fa3;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}
