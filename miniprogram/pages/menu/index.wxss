/* pages/menu/index.wxss */
.container {
  padding: 16rpx; /* 页面左右安全间距 16rpx */
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  align-items: center;
  justify-content: center;       /* 标题水平居中 */
  margin-bottom: 30rpx;
  position: relative;            /* 让购物车按钮进行绝对定位 */
  padding-right: 80rpx;          /* 预留空间避免标题与按钮重叠 */
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.cart-icon {
  position: absolute;            /* 固定到右侧，保留安全间距 */
  right: calc((100vw - 100%) / -2 + 40rpx); /* 购物车距离屏幕右侧 x rpx */
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
}

.cart-img {
  width: 100%;
  height: 100%;
}

.cart-badge {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  background-color: #ff4444;
  color: white;
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
  font-size: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.category-scroll {
  white-space: nowrap;
  margin-bottom: 30rpx;
}

.category-list {
  display: inline-flex;
}

.category-item {
  display: inline-block;
  padding: 20rpx 40rpx;
  margin-right: 20rpx;
  background-color: white;
  border-radius: 50rpx;
  font-size: 28rpx;
  color: #666;
  border: 2rpx solid #eee;
}

.category-item.active {
  background-color: #ff6b6b;
  color: white;
  border-color: #ff6b6b;
}

.food-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.food-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  padding: 16rpx; /* 收紧卡片内边距 */
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  position: relative; /* 供按钮绝对定位 */
  /* 视口贴边策略：左右各 8rpx 安全间距 */
  width: calc(100vw - 44rpx);
  margin-left: calc((100vw - 100%) / -2 + 22rpx);
  margin-right: calc((100vw - 100%) / -2 + 22rpx);
  box-sizing: border-box;
}

.food-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 16rpx;
  margin-right: 12rpx; /* 缩小与文字间距 */
}

.food-info {
  flex: 1 1 auto;
  min-width: 0;
  padding-right: 56rpx; /* 为右侧按钮预留空间 */
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.food-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
}

.food-action {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
}

.add-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  background-color: #ff6b6b;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  padding: 0;
}

/* 去除小程序 button 默认点击边框效果，保持纯圆形 */
.add-btn::after {
  border: none;
}
