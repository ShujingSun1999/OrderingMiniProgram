/* pages/cart/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

.header {
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  text-align: center;
}

.cart-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.remark-section {
  margin-top: 60rpx; /* 与最后一个菜留更明显的间距 */
  background: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.remark-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 600;
}

.cart-item {
  display: flex;
  align-items: center;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  /* 与备注框一致：左右各 44rpx 安全间距的视口贴边 */
  width: calc(100vw - 88rpx);
  margin-left: calc((100vw - 100%) / -2 + 44rpx);
  margin-right: calc((100vw - 100%) / -2 + 44rpx);
  box-sizing: border-box;
}

.food-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  margin-right: 30rpx;
}

.food-info {
  flex: 1;
}

.food-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  gap: 20rpx;
  flex-shrink: 0;
}

.quantity-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f0f0f0;
  color: #666;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 60rpx;
  text-align: center;
}

.quantity {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  min-width: 40rpx;
  text-align: center;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-menu-btn {
  background-color: #ff6b6b;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  border: none;
}

.checkout-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  padding: 28rpx 20rpx; /* 提高整栏高度 */
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  gap: 12rpx;
}

.total-items {
  font-size: 34rpx; /* 字体更大 */
  color: #666;
  margin-left: 16rpx; /* 往右一点 */
}

.checkout-btn {
  background-color: #ff6b6b;
  color: white;
  border-radius: 50rpx;
  padding: 22rpx 44rpx; /* 按钮更高更宽 */
  font-size: 32rpx; /* 字体更大 */
  border: none;
  margin-right: 16rpx; /* 按钮整体向右一些 */
}

.remark-input, .remark-textarea {
  width: 100%;
  background-color: #f7f7f7;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 14rpx 16rpx;
  font-size: 26rpx;
  color: #333;
}

.remark-textarea {
  min-height: 200rpx; /* 固定较大高度 */
  height: 200rpx;
  max-height: 200rpx;
  /* 备注框的间距视口贴边但保留左右各 16rpx 安全间距 */
  width: calc(100vw - 160rpx);
  margin-left: calc((100vw - 100%) / -2 + 80rpx);
  margin-right: calc((100vw - 100%) / -2 + 80rpx);
  box-sizing: border-box;
}
