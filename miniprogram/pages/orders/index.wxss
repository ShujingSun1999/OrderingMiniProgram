/* pages/orders/index.wxss */
.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.share-btn {
  background: none;
  border: none;
  padding: 0;
  margin: 0;
}

.share-icon {
  width: 40rpx;
  height: 40rpx;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.order-item {
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.order-id {
  font-size: 28rpx;
  color: #666;
}

.order-status {
  font-size: 26rpx;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.order-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.order-status.completed {
  background-color: #d4edda;
  color: #155724;
}

.order-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 25rpx;
}

.order-items {
  margin-bottom: 25rpx;
}

.order-food {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.food-name {
  font-size: 28rpx;
  color: #333;
}

.food-price {
  font-size: 26rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 2rpx solid #eee;
  padding-top: 20rpx;
}

.order-total {
  font-size: 32rpx;
  font-weight: bold;
  color: #ff6b6b;
}

.share-order-btn {
  background-color: #07C160;
  color: white;
  border-radius: 20rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  border: none;
}

.empty-orders {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.go-menu-btn {
  background-color: #ff6b6b;
  color: white;
  border-radius: 50rpx;
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  border: none;
}
